{
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "config/tsconfig.test.json"
    }
  },
  "testRegex": ".+\\.spec\\.ts?$",
  "moduleFileExtensions": [
    "js",
    "ts",
    "node"
  ],
  "rootDir": "..",
  "collectCoverage": true,
  "coverageDirectory": "coverage/"
}
